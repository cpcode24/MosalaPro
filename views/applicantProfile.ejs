<%- include('partials/header') %>

<section class="bg-light p-4">
   <div class="container p-4">

    <div class="row">

        <div class="col p-4">

            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                    <li class="breadcrumb-item active" ><a href="/myrequests">My requests</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Applicant</li>
                </ol>
            </nav>
                <h5>Application for job request</h5>
                <span id="notif-msg"></span>
                <div class="row">
                    <div class="col-lg-8 col-md-12 col-sm-12 col-12">
                      <div class="shadow-sm p-4 mb-5 bg-white rounded " id="contentId">
                        <div class="row">
                          <div class="col-lg-4 col-md-12 col-sm-12 col-12">
                            <div
                              class="bg-image  w-100"
                              style="
                                background-image: url('/photo/<%=pro.photo %>');
                                height: 300px;
                              "
                            ></div>
                            
                          </div>
                          <div class="col-lg-8 col-md-12 col-sm-12 col-12">
                            <div class="d-flex justify-content-between w-100 mt-2">
                              <h6 class="text-muted">Service provider profile information</h6>
                            </div>
                            <h5 class="text-primary mt-2"><%=pro.firstName %> <%=pro.lastName %></h5>
                            <p class="mt-1 mb-1 text-primary"><%=pro.role %></p>
                            <ul class="rating " data-mdb-toggle="rating" data-mdb-readonly="true" data-mdb-value="3"> 
                              <% let i = 0; for(i = 0; i < pro.rating; i++) { %>
                                  <li class="d-inline"><b class="fa-star fa-sm rating-star-color fas "></b></li>
                              <% } if(i < 5) while(i < 5) { %>
                                  <li class="d-inline"><b class="fa-star-o fa-sm rating-star-color fas "></b></li>
                              <% i++; } %>
                              <span>(0)</span>
                            </ul>
                            <div class="d-flex w-100">
              
                              <div class="row">
                                  <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                      
                                      <p class="mt-1 mb-1 ml-1 text-primary">$<%=pro.rate %> / USD / hour</p>
                                      <p class="mt-1 mb-1 ml-1 text-primary"><%=pro.city %>, <span class="profile-country"><%=pro.country %></span></p>
                                      <p class="mt-1 mb-1 ml-1 text-primary">Local time: 11:12 PM </span>
                                      <p class="mt-1 mb-1 ml-1 text-primary">Joined <%= new Date(pro.createdAt).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></p>
                                     
              
                                      
                                  </div>
              
                                  <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                                      <div class="mr-2">
                                          <p class="text-primary"><span class="n-a "><%=postRequestsCompleted%></span> Jobs Completed</p>
                                      </div>
                              </div>
              
                              </div>
              
                            
                                
                            </div>
              
                            <p class="mt-1 mb-1"><%=pro.description %></p>
                            <div class="row mt-2">
                              <div class="col d-inline justify-content-between">
                                <% if(checkBooking){ %>
                                    <span> You have already hired this provider for the job</span>
                               <% } else { %>
                                      <a href="#hireConfModalCta" data-toggle="modal" data-caption-animate="fadeInUp" class="simple-btn mr-3">
                                          <b class="fa fa-envelope-o mr-1 mb-1" aria-hidden="true"></b>Hire <%=pro.firstName %>
                                      </a>
                                      <a class="simple-btn-inv-dgr mr-3" href="#rejectConfModalCta" data-toggle="modal" data-caption-animate="fadeInUp"><b class="fa fa-times mr-1 mb-1"></b> Reject application</a>
                                <% } %>
                                      <a class="simple-btn-inv" href="https://wa.me/<%=pro.phone%>" target="_blank"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-whatsapp mb-1 mr-1" viewBox="0 0 16 16">
                                      <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
                                      </svg>Chat</a>
                                </div>
                              </div>
                          </div>
                          
                        </div>
                      </div>
                      <div class="container shadow-sm mb-5 bg-white rounded ">
                        <div class="row">
                          <div class="col p-4">
                            
                            <div class="row border-bottom mt-1">
                              <div class="col">
                                <h5>Job request details</h5> 
                              </div>
                            </div>
                            <div class="row mt-3">
                              <div class="col">
                                <span > Request title: <b> <%=job.requestTitle%> </b>
                              </div>
                            </div>
                              
                              <div class="row mt-1">
                                <div class="col">
                                <span > Category: <b> <%=job.requestCategory %></b></span> 
                                </div>
                              </div>
                                <div class="row mt-1">
                                  <div class="col">
                                    <span > Budget: <b> <%=job.budget %></b></span>
                                  </div>
                                </div>
                                <div class="row mt-1">
                                  <div class="col">
                                  <span > Deadline: <b> <%=job.deadline %></b></span>
                                  </div>
                                </div>
                                <div class="row mt-1">
                                  <div class="col p-2">
                                    <span > Deascription: <b> <%=job.description %></b></span>
                                  </div>
                                </div>
                                <div class="row p-3 mt-1">
                                  <% if (job.files.length == 0){ %>
                                                      <div class="col">
                                                          <span class="text-muted text-small"> This service request have no attachments.</span>
                                                      </div>
                                                  <% } else { %>
                                                      <% let j = 0; job.files.forEach(file=>{ j++; %>
                  
                                                      <!--span class="d-none" id="file-"><%= file%></a></p-->
                                                      <div title="Download file <%=j%>" data-toggle="tooltip" data-placement="bottom"  class=" col-sm-4 col-lg-2 tooltips cursor mb-4" >
                                                      <!--span class="job-details"><%=job.files.length%></span-->
                                                          <!-- Post Modern-->
                                                          <div class="d-flex justify-content-center px-4 px-auto" onClick="downloadFile('<%= file%>')" >
                                                              <b class="fa fa-file-text-o fa-5x mb-1 file-icon" aria-hidden="true"></b>
                                                              <span class="post-modern-time">  <%=job.requestTitle%>'s file <%=j%></span>
                                                              
                                                          </div>
                                                          
                                                        </div>
                  
                                                      <% }); } %>
                                    </div>
                                  
                              </div>
                         </div>
                      </div>
                    </div>
                    <div class="col">
                      <div class="container shadow-sm mb-5 pb-1 bg-white rounded ">
                        <div class="row">
                          <div class="w-100 d-flex justify-content-between align-items-center border-bottom border-dark p-3">
                            <h6>Verification</h6>
                          </div>
                        </div>
                          
                          <div class="d-flex justify-content-between align-items-center my-3">
                            <span>Identity Verification</span>
                            <span class="text-primary">Verified</span>
                          </div>
                         
                          <div class="d-flex justify-content-between align-items-center my-3">
                            <span>Email Address</span>
                            <span class="text-primary">Verified</span>
                          </div>
                          <div class="d-flex justify-content-between align-items-center my-3">
                            <span>LinkedIn Profile</span>
                            <span class="text-primary">Verified</span>
                          </div>
              
                          
                        <p></p>
                      </div>
                      <div class="container shadow-sm mb-5 pb-3 bg-white rounded ">
                        <div class="row">
                          <div class="w-100 d-flex justify-content-between align-items-center border-bottom border-dark p-3">
                            <h6>Skills</h6>
                          </div>
                        </div>
                        <div class="mt-2">
              
                        <% if(pro.skills) pro.skills.forEach(skill => { %> 
                          <p><%= skill %></p>
                        <% }); %>
                      </div>
              
                      </div>
                    </div>
                  </div>


        </div>
   </div>
</div>
</section>

<%- include('partials/HireConfirmationModal') %>
<%- include('partials/RejectConfirmationModal') %>
<script src="js/notificationDetailHandler.js"></script>
<%- include('partials/footer') %>