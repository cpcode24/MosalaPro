<%- include('partials/header') %>
<section class="bg-light p-4 ">
  <div class="container p-4">
    
<div class=" pt-4">
    <nav aria-label="breadcrumb" class="main-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/find-services">Find Services</a></li>
            <li class="breadcrumb-item active" aria-current="page">Professional profile</li>
        </ol>
    </nav>
  <div class=" text-secondary px-2"> 
    <div class="row">
      <div class="col-lg-8 col-md-12 col-sm-12 col-12">
        <div class="shadow-sm p-4 mb-5 bg-white rounded " id="contentId">
          <div class="row">
            <div class="col-lg-4 col-md-12 col-sm-12 col-12">
              <div
                class="bg-image  w-100"
                style="
                  background-image: url('/photo/<%=pro.photo %>');
                  height: 300px;
                "
              ></div>
              
            </div>
            <div class="col-lg-8 col-md-12 col-sm-12 col-12">
              <span id="mess__"></span>
              <div class="d-flex justify-content-between w-100 mt-2" id="topInfo">
                <h5><%=pro.firstName %> <%=pro.lastName %>
                  <% if (isFavorite) { %>
                    <b class="fa-star fa-sm rating-star-color fas ml-2" title="One of your favorite service providers."  ></b>
                  <% } %>
                </h5> 
                <% if(usr) { %>
                <div class="btn-group">
                  <button type="button" class="btn btn-light btn-sm rounded" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <b class="mdi mdi-dots-vertical"></b>
                  </button>
                  <div class="dropdown-menu dropdown-menu-right">
                    <button class="dropdown-item" type="button" onClick="requestQuotation('<%=pro._id%>')"><i class="mdi mdi-fax mr-2"></i>Request quotation</button>
                    <% if(!isFavorite) { %>
                    <button class="dropdown-item" type="button" onClick="addToFavorite('<%=pro._id%>')"><i class="mdi mdi-bookmark mr-2"></i>Pin as favorite</button>
                    <% } %>
                  </div>
                </div>
              <% } %>
              </div>
              <p><%=pro.role %></p>
              <ul class="rating " data-mdb-toggle="rating" data-mdb-readonly="true" data-mdb-value="3"> 
                <% let i = 0; for(i = 0; i < pro.rating; i++) { %>
                    <li class="d-inline"><b class="fa-star fa-sm rating-star-color fas "></b></li>
                <% } if(i < 5) while(i < 5) { %>
                    <li class="d-inline"><b class="fa-star-o fa-sm rating-star-color fas "></b></li>
                <% i++; } %>
                <span>(0)</span>
              </ul>
              <div class="d-flex w-100">

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                        
                        <p class="mt-1 mb-1">$<%=pro.rate %> / USD / hour</p>
                        <p class="mt-1 mb-1"><%=pro.city %>, <span class="profile-country"><%=pro.country %></span></p>
                        <p class="mt-1 mb-1">Local time: 11:12 PM </span>
                        <p class="mt-1 mb-1">Joined <%= new Date(pro.createdAt).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></p>
                       

                        
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="mr-2">
                            <p><span class="n-a">N/A</span> Jobs Completed</p>
                            <p><span class="n-a">N/A</span> On Time </p>  
                            <p><span class="n-a">N/A</span> On Budged</p>
                            <p><span class="n-a">N/A</span> Repeat Hire Rate</p>
                        </div>
                </div>

                </div>

              
                  
              </div>

              <p class="mt-1 mb-1"><%=pro.description %></p>

