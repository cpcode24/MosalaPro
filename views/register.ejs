<%- include('partials/header') %>
<section>
  <div class="container">
      <div class=" " id="regModalCta" tabindex="-1" role="dialog" aria-hidden="true">
          <div class="" role="document">
            <div class="">
              <ul class="nav nav-tabs nav-justified mb-1" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                  <a class="nav-link active" id="tab-register-u" data-toggle="pill" href="#pills-register-u" role="tab"
                    aria-controls="pills-register-u" aria-selected="true">USER</a>
                </li>
                <li class="nav-item" role="presentation">
                  <a class="nav-link" id="tab-provider" data-toggle="pill" href="#pills-register" role="tab"
                    aria-controls="pills-register" aria-selected="false">PROVIDER</a>
                </li>
              </ul>
              <!-- Pills navs -->
              <!-- Pills content -->
              <div class="tab-content ">
                <div class="tab-pane fade show active" id="pills-register-u" role="tabpanel" aria-labelledby="tab-register-u">
                  
                  
                    <div class="text-center ">
                      <h5 class="title text text-center">Sign Up as User</h5> 
                      <span class="mb-2">With </span>
                      </div>
                    <div class="text-center">
                      <a class="btn btn-primary ml-1" style="background-color: #3b5998;" href="/auth/facebook" role="button">
                        <b class="fab fa-facebook me-2 px-1"> </b></a>
                      
                      <a class="btn btn-primary ml-1" style="background-color: #7e2b12;" href="/auth/google" role="button">
                        <b class="fab fa-google me-2"></b> </a>
              
                      <a class="btn btn-primary ml-1" style="background-color: #55acee;" href="#!" role="button">
                        <b class="fab fa-twitter me-2"></b> </a>

                      <a class="btn btn-primary ml-1" style="background-color: #0082ca;" href="#!" role="button">
                        <b class="fa fa-linkedin me-2"></b> </a>
                    </div>

                      <p class="text-center mb-4">Or fill in information below.</p>

                  <form action="/register-user" method="post">
                    <div class="row">
                      <div class="col-md-6">
                          <!-- First name input -->
                          <div class="form-outline  ">
                              <input type="text" id="registerFirstName" class="form-control" placeholder="First Name" name="firstName"  required/>
                            </div>
                      </div>
                      <div class="col-md-6">
                          <!-- Last name input -->
                          <div class="form-outline  ">
                              <input type="text" id="registerLastName" class="form-control" placeholder="Last Name" name="lastName"  required />
                          </div>
                      </div>
                    </div>
                  
                      <div class="row">
                          <div class="col-md-6">
                              <!-- Email input -->
                              <div class="form-outline  ">
                                  <input type="email" id="registerEmail" class="form-control has-success" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" name="email"  required/>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <!-- Phone input -->
                              <div class="form-outline  ">
                                  <input type="number" id="registerPhone" class="form-control" placeholder="Phone Number" name="phone" pattern="/((\+*)((0[ -]*)*|(*))((\d{12})+|(\d{10})+))|\d{5}([- ]*)\d{6}/" required/>
                              </div>
                          </div>
                      </div>
                      <!-- Address input -->
                      <div class="row">
                          <div class="col">
                              <div class="form-outline  ">
                                  <input type="text" id="registerAddress" class="form-control" placeholder="Address" name="address" required/>
                              </div>
                          </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                            <!-- Country input -->
                            <select name="regCountry" id="regCountry" class="form-control" aria-label="Select Country" style="display: inline;" required>
                                <option >Select Country</option>
                                <% countries.forEach(country => { %> 
                                  <option value="<%= country.name %>"> <%= country.name %></option>
                                  <% }); %>
                              </select>
                        </div>
                        <div class="col-md-6">
                            <!-- City input -->
                            <select class="form-control" aria-label="Select City"  style="display: inline;" id="regCity" name="regCity" required>
                                <option>Select City</option>
                              </select>
                        </div>
                    </div>
                      
                      <div class="row">
                          <div class="col-md-6">
                              <!-- Password input -->
                              <div class="form-outline  ">
                                  <input type="password" id="registerPassword" class="form-control" placeholder="Password" name="password"  required/>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <!-- Confirm Password input -->
                              <div class="form-outline  ">
                                  <input type="password" id="registerConfPassword" class="form-control" placeholder="Confirm Password"  name="cpassword" required/>
                              </div>
                          </div>
                      </div>
              
                      <!-- 2 column grid layout -->
                      <div class="row  ">
                          <div class="col-md-6 d-flex justify-content-center">
                          <!-- Checkbox -->
                          <div class="form-check mb-3 mb-md-0">
                              <input class="form-check-input" type="checkbox" value="" id="loginCheck" unchecked required/>
                              <label class="form-check-label" for="loginCheck"> I have read the terms and conditions.</label>
                          </div>
                          </div>
                  
                          <div class="col-md-6 d-flex justify-content-center">
                          <!-- Simple link -->
                          <a href="#!">Read terms and conditions</a>
                          </div>
                      </div>
                      <div class="row  ">
                        <div class="col-lg-2 col-md-3 col-sm-0">
                        </div>
                        <div class="col-lg-8 col-md-6 col-sm-12">
                          <div class=" justify-content-center">
                            <div class="g-recaptcha" data-sitekey="6LdUeBMlAAAAAAln0xxrDWAG1kHsZLwtNVVYn8o6" data-callback="enableUserRegBtn"></div>
                          </div>
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-0">
                        </div>
                      </div>
                        
                      <div class="row">
                        <div class="col-2"></div>
                          <div class="col-8">
                              <div class="mb-1 ">
                                      <!-- Submit button -->
                                      <input type="submit" class="btn button-primary btn-block mb-4" name="register-u" id="register-u" disabled="disabled" value="Register">
                              </div>
                          </div>
                          <div class="col-2"></div>
                      </div>
                  </form>
                </div>
                <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register-p">
                  
                  <div class="text-center ">
                    <h5 class="title text text-center">Sign Up as Provider</h5> 
                    <span class="mb-2">With </span>
                    </div>
                  <div class="text-center">
                    <a class="btn btn-primary ml-1" style="background-color: #3b5998;" href="/auth/facebook" role="button">
                      <b class="fab fa-facebook me-2 px-1"> </b></a>
                    
                    <a class="btn btn-primary ml-1" style="background-color: #7e2b12;" href="/auth/google" role="button">
                      <b class="fab fa-google me-2"></b> </a>
            
                    <a class="btn btn-primary ml-1" style="background-color: #55acee;" href="#!" role="button">
                      <b class="fab fa-twitter me-2"></b> </a>

                    <a class="btn btn-primary ml-1" style="background-color: #0082ca;" href="#!" role="button">
                      <b class="fa fa-linkedin me-2"></b> </a>
                  </div>
                  <p class="text-center mb-4">Or fill in information below.</p>
                  
                  <form  action="/register-pro" method="post">
                    <!-- Company Name input -->
                    <div class="row">
                      <div class="col">
                          <!-- Country input -->
                          <select class="form-control" aria-label="Select Category" name="pRegisterCategroy" style="display: inline;">
                              <option selected>Select Category</option>

                              <% if(categories){ categories.forEach(cat=>{ %>
                                <option value="<%=cat.name %>"><%=cat.name %></option>
                              <% });} %>
                            </select>
                      </div>
                    </div>  
                    <div class="row">
                      <div class="col-md-6">
                          <!-- First name input -->
                          <div class="form-outline  ">
                              <input type="text" id="pRegisterName" class="form-control" placeholder="First Name" name="pFirstName"  required/>
                            </div>
                      </div>
                      <div class="col-md-6">
                          <!-- Last name input -->
                          <div class="form-outline  ">
                              <input type="text" id="pRegisterLastname" class="form-control" placeholder="Last Name" name="pLastName"  required/>
                          </div>
                      </div>
                    </div>
                  
                  <div class="row">
                      <div class="col-md-6">
                          <!-- Email input -->
                          <div class="form-outline ">
                              <input type="email" id="pRegisterEmail" class="form-control" placeholder="Email" name="pEmail"  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required/>
                          </div>
                      </div>
                      <div class="col-md-6">
                          <!-- Phone input -->
                          <div class="form-outline ">
                              <input type="number" id="pRegisterPhone" class="form-control" placeholder="Phone Number" name="pPhone" pattern="/((\+*)((0[ -]*)*|(*))((\d{12})+|(\d{10})+))|\d{5}([- ]*)\d{6}/" required/>
                          </div>
                      </div>
                  </div>
                  <!-- Address input -->
                  <div class="row">
                      <div class="col">
                          <div class="form-outline  ">
                              <input type="text" id="pRegisterAddress" class="form-control" placeholder="Address" name="pAddress"/>
                            </div>
                      </div>
                  </div>
                  
                  <div class="row">
                      <div class="col-md-6">
                          <!-- Country input -->
                          <select name="country_pro" id="country_pro" class="form-control" aria-label="Select Country" style="display: inline;" required>
                              <option selected>Select Country</option>
                              <% countries.forEach(country => { %> 
                                <option value="<%= country.name %>"> <%= country.name %></option>
                                <% }); %>
                            </select>
                      </div>
                      <div class="col-md-6">
                          <!-- City input -->
                          <select class="form-control" aria-label="Select City"  style="display: inline;" id="city_pro" name="city_pro" required>
                              <option selected>Select City</option>
                            </select>
                      </div>
                  </div>

                  <div class="row">
                      <div class="col-md-6">
                          <!-- Password input -->
                              <div class="form-outline">
                                  <input type="password" id="password-input" class="form-control" placeholder="Password" name="password" aria-label="password" aria-describedby="password" autocomplete="off"required/>
                              </div>
                              <div class="valid-feedback">Good</div>
                              <div class="invalid-feedback">Weak</div>
                      </div>
                      <div class="col-md-6">
                          <!-- Conifrm Password input -->
                          <div class="form-outline  ">
                              <input type="password" id="password-input-conf" class="form-control" placeholder="Confirm Password" autocomplete="off" required/>
                          </div>
                          <div class="valid-feedback">Match</div>
                          <div class="invalid-feedback">Do not match</div>
                      </div>
                      <div class="alert px-4 py-3 mb-0 d-none" role="alert" data-mdb-color="warning" id="password-alert">
                          <ul class="list-unstyled mb-0">
                              <li class="requirements leng">
                              <i class="fas fa-check text-success me-2"></i>
                              <i class="fas fa-times text-danger me-3"></i>
                              Your password must have at least 8 chars</li>
                              <li class="requirements big-letter">
                              <i class="fas fa-check text-success me-2"></i>
                              <i class="fas fa-times text-danger me-3"></i>
                              Your password must have at least 1 big letter.</li>
                              <li class="requirements num">
                              <i class="fas fa-check text-success me-2"></i>
                              <i class="fas fa-times text-danger me-3"></i>
                              Your password must have at least 1 number.</li>
                              <li class="requirements special-char">
                              <i class="fas fa-check text-success me-2"></i>
                              <i class="fas fa-times text-danger me-3"></i>
                              Your password must have at least 1 special char.</li>
                          </ul>
                      </div>
                  </div>
                  

                    <div class="row  ">
                      <div class="col-md-6 d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                          <input class="form-check-input" type="checkbox" value="" id="termsCheck" unchecked required/>
                          <label class="form-check-label" for="termsCheck"> I have read the terms and conditions.</label>
                        </div>
                      </div>
              
                      <div class="col-md-6 d-flex justify-content-center">
                        <!-- Simple link -->
                        <a href="#!">Read terms and conditions</a>
                      </div>
                    </div>
              
                    <div class="row  ">
                      <div class="col-lg-2 col-md-3 col-sm-0">
                      </div>
                      <div class="col-lg-8 col-md-6 col-sm-12">
                        <div class=" justify-content-center">
                          <div class="g-recaptcha" data-sitekey="6LdUeBMlAAAAAAln0xxrDWAG1kHsZLwtNVVYn8o6" data-callback="enableProBtn"></div>
                        </div>
                      </div>
                      <div class="col-lg-2 col-md-3 col-sm-0">
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-2"></div>
                      <div class="col-8">
                          <!-- Submit button -->
                          <input type="submit" class="btn button-primary btn-block mb-4" name="register-p" value="Register" disabled="disabled">
                      </div>
                      <div class="col-2"></div>
                    </div>
                  </form>
                </div>
              </div>
            
            </div>
          </div>
        </div>
      <script>
        function enableUserRegBtn(){
          document.getElementById("register-u").disabled = false;
      }
      function enableProRegBtn(){
          document.getElementById("register-p").disabled = false;
      }
      </script>

  </div>
</section>
<%- include('partials/footer') %>